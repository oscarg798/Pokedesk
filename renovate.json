{
    "extends": [
        "config:base"
    ],
    "groupName": "all",
    "separateMajorMinor": false,
    "packageRules": [{
            "matchPackagePatterns": [
                "*"
            ],
            "groupName": "all"
        },
        {
            "matchPackagePatterns": [
                "^androidx\\.navigation.*$"
            ],
            "groupName": "Navigation"
        },
        {
            "matchPackagePatterns": [
                "^androidx\\.room.*$"
            ],
            "groupName": "Room"
        },
        {
            "matchPackagePatterns": [
                "^androidx\\.work.*$"
            ],
            "groupName": "WorkManager"
        },
        {
            "matchPackagePatterns": [
                "^com\\.google\\.android\\.gms.*$"
            ],
            "groupName": "GMS"
        },
        {
            "matchPackagePatterns": [
                "^com\\.google\\.dagger.*$",
                "^androidx\\.hilt.*$"
                
            ],
            "groupName": "DAGGER"
        },
        {
            "matchPackagePatterns": [
                "^com\\.google\\.firebase.*$"
            ],
            "groupName": "Firebase"
        },
        {
            "matchPackagePatterns": [
                "^com\\.squareup\\.retrofit2.*$",
                "^com\\.squareup\\.okhttp3.*$"
            ],
            "groupName": "Retrofit"
        },
        {
            "matchPackagePatterns": [
                "^org\\.jetbrains\\.kotlin:.*$",
                "^androidx\\.compose.*$"
            ],
            "enabled": false
        },
        {
            "matchPaths": [
                "gradle-wrapper.properties"
            ],
            "groupName": "GradleProperties"
        }
    ],
    "npm": {
        "schedule": "at any time"
    },
    "timezone": "Europe/Madrid",
    "schedule": [
        "at any time"
    ],
    "rebaseWhen": "behind-base-branch"
}
